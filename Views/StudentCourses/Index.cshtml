@model IEnumerable<Registrera.se.Models.CourseDetails>

@{
    ViewData["Title"] = "Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Library</h2>

<form asp-action="Index" method="get">
    <div class=" form-action no-color">
        <p>
            <h4>
                Search by title, city or teacher's last name:
            </h4>             
            <input type="text" name="searchString" value="@ViewData["CurrentSearch"]" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>

    </div>
</form>

<table class="table">
    <thead>
        <tr>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["TitleSortingParm"]">@Html.DisplayNameFor(model => model.Title) </a>

            </th>

            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["AboutSortingParm"]">@Html.DisplayNameFor(model => model.About) </a>

            </th>
            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["CountryeSortingParm"]">@Html.DisplayNameFor(model => model.Country) </a>

            </th>
            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["CitySortingParm"]">@Html.DisplayNameFor(model => model.City) </a>

            </th>

            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["SchoolSortingParm"]">@Html.DisplayNameFor(model => model.School) </a>

            </th>
            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["TeacherSortingParm"]">@Html.DisplayNameFor(model => model.Teacher) </a>

            </th>
            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["StartDateSortingParm"]"> @Html.DisplayNameFor(model => model.StartDate)</a>

            </th>
            <th>
                <a asp-action="Index" asp-route-sortId="@ViewData["EndDateSortingParm"]">@Html.DisplayNameFor(model => model.EndDate)</a>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Register" asp-route-id="@item.Id">Register</a>
            </td>
        </tr>
}
    </tbody>
</table>
